{
  "compilerOptions": {
    "target": "es5",
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "preserve",
    "lib": [
      "es2016",
      "dom"
    ],
    "sourceMap": true,
    "noUnusedLocals": true,
    "typeRoots": [
      "types/"
    ]
  },
  "include": [
    "src",
    "./types/**/*"
  ]
}
